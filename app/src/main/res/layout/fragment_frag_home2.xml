<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragHome"
    android:background="@drawable/backgroundgrey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/backgroundhome"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:background="@drawable/quizstress"
                    />

                <Button
                    android:id="@+id/banner1"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:text="klik disini untuk mulai"
                    android:textSize="15dp"
                    android:textColor="#ffff"
                    />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C062F5"
                android:text="Artikel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                >
                <Button
                    android:layout_width="370dp"
                    android:layout_height="140dp"
                    android:id="@+id/healthDef"
                    android:background= "@null"
                    />

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/SliderBanner"
                    android:layout_width="370dp"
                    android:layout_height="140dp"
                    app:auto_cycle="true"
                    app:delay="2"
                    app:period="1000" />


            </RelativeLayout>
            <Button

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffff"
                android:text="[stress] bisa disembuhkan lho?"
                android:textAlignment="textStart"
                android:paddingLeft="20dp"
                android:layout_marginTop="430dp"
                android:textColor="#C062F5"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/anxietyMore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffff"
                android:text="[kecemasan] apakah kecemasan itu?"
                android:textAlignment="textStart"
                android:paddingLeft="20dp"
                android:layout_marginTop="480dp"
                android:textColor="#FCC78E"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffff"
                android:text="[depresi] Apakah depresi bisa disembuhkan?"
                android:textAlignment="textStart"
                android:paddingLeft="20dp"
                android:layout_marginTop="530dp"
                android:textColor="#FF7070"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                />



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>